{
  "apps": [
    {
      "name": "my-app",
      "script": "dist/server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "TS_NODE_BASEURL": "./dist"
      },
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "err.log",
      "out_file": "out.log",
      "merge_logs": true,
      "autorestart": true
    }
  ]
}